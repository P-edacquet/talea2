<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @organisation %>

    <%= link_to "Modifier cette organisation", edit_organisation_path(@organisation), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Détruire cette organisation", organisation_path(@organisation), method: :delete, data: {turbo_confirm: "Êtes-vous certain(e) de vouloir supprimer cette organisation ?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%# link_to "Retour vers les organisations", organisations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
