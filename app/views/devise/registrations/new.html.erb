<div class="hero min-h-screen bg-base-200">
  <div class="flex flex-col justify-center h-screen max-w-96 mx-auto">
    <div class="card shadow-2xl bg-base-100 p-8">

      <h1 class="text-2xl font-bold border-b border-gray-400 pb-4 w-full text-center my-8">Inscription</h1>

      <div class="w-full">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input input-sm input-bordered w-full' %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:'input input-sm input-bordered w-full' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input input-sm input-bordered w-full' %>
          </div>

          <div class="actions">
            <%= f.submit "S'inscrire", class: 'btn btn-outline btn-primary btn-lg w-full mt-4 mb-8' %>
          </div>
        <% end %>

      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>