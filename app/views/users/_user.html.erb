<div id="<%= dom_id user %>">
  <p class="text-2xl font-black text-primary"><%= link_to user.nom_prénom, user %></p>
  <span class="text-secondary"><%= user.rôle.humanize %> <%= user.service.try(:humanize) %> </span>
  <p class="my-4"><%= user.email %></p>

  <% if user.agent? %>
    <p class="my-4">Moyenne évaluation: <%= user.moyenne %></p>
  <% end %>

  <% if action_name != "show" %>
    <div class="flex flex-wrap gap-2">
      <%= link_to "Voir cet utilisateur", user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Modifier cet utilsateur", edit_user_path(user), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
    <hr class="my-4">
  <% end %>
</div>
