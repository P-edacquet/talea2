<div id="<%= dom_id user %>">
  <p class="text-2xl font-black"><%= user.nom_prénom %></p>
  <span class="badge badge-error text-white"><%= user.rôle.humanize %></span>
  <p><%= user.email %></p>

  <% if action_name != "show" %>
    <%= link_to "Voir cet utilisateur", user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Modifier cet utilsateur", edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="my-4">
  <% end %>
</div>
