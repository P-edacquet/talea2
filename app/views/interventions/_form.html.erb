<%= form_with(model: intervention, class: "contents") do |form| %>
  <% if intervention.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
        <% intervention.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: "input input-bordered input-sm w-full", required: :true %>
  </div>

  <div class="my-5">
    <%= form.label :tag_list, "Tags", style: "display: block" %>
    <%= form.text_field :tag_list, value: intervention.tag_list.join(', '), class: 'input input-bordered input-sm w-full' %>
  </div>

  <div class="my-5">
    <%= form.label :adherent_id, "Adhérent" %>
    <%= form.select :adherent_id, options_from_collection_for_select(@organisation_members.adhérent, :id, :nom_prénom, intervention.adherent_id), include_blank: true, class: "select select-bordered select-sm w-full" %>
  </div>

  <div class="flex gap-8 my-5">
    <div class="flex-1">
      <%= form.label :agent_id %>
      <%= form.select :agent_id, grouped_options_for_select(@grouped_agents, intervention.agent_id), include_blank: true, class: "select select-bordered select-sm w-full" %>
    </div>

    <div class="flex-1">
      <%= form.label :agent_binome_id, "Binôme" %>
      <%= form.select :agent_binome_id, grouped_options_for_select(@grouped_agents, intervention.agent_binome_id), include_blank: true, class: "select select-bordered select-sm w-full" %>
    </div>
  </div>

  <div class="flex flex-wrap gap-8 my-5 items-end">
    <div class="flex-1">
      <%= form.label :début %>
      <%= form.datetime_field :début, class: "input input-bordered input-sm w-full" %>
    </div>

    <% unless params[:action] == 'new' %>
      <div class="flex-1">
        <%= form.label :fin %>
        <%= form.datetime_field :fin, class: "input input-bordered input-sm w-full" %>
      </div>

      <div>
        <%= form.label :temps_de_pause, "Temps de pause (h)" %>
        <%= form.number_field :temps_de_pause, min: 0, required: true, class: "input input-bordered input-sm w-full" %>
      </div>
    <% end %>
  </div>

  <% @intervention.photos.each do |photo| %>
    <%= form.hidden_field :photos, multiple: true, value: photo.signed_id %>
  <% end %>

  <div class="sm:flex flex-wrap gap-8 my-5 items-end">
    <div class="flex-1">
      <%= form.label :photos, 'Photos: ' %>
      <%= form.file_field :photos, multiple: true, accept: 'image/png,image/gif,image/jpeg', class: 'file-input file-input-sm file-input-bordered w-full max-w-md' %>
    </div>

    <% unless current_user.agent? || (params[:action] == 'new') %>
      <div class="mt-4">
        <%= form.label :note, 'Évaluation: ' %>
        <div class="rating">
          <% 1.upto(5) do |i| %>
            <%= form.radio_button :note, i, class:"mask mask-star bg-yellow-400" %>
          <% end %> 
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :commentaires %>
    <%= form.text_area :commentaires, class: "textarea textarea-bordered textarea-sm w-full", 'data-controller': 'textarea-autogrow' %>
  </div>

  <div class="flex flex-wrap gap-2">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <% if params[:action] == 'edit' %>
      <%= link_to "Voir", @intervention, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
    <%= link_to "Annuler", interventions_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
<% end %>

<script>
  // slimselect
  new SlimSelect({
    select: '#intervention_agent_id',
    settings: {
      searchPlaceholder: 'Recherche',
      searchText: 'Pas de résultat',
      searchingText: 'Recherche...',
      placeholderText: 'Choisissez un agent',
      allowDeselect: true,
    }
  })

  new SlimSelect({
    select: '#intervention_agent_binome_id',
    settings: {
      searchPlaceholder: 'Recherche',
      searchText: 'Pas de résultat',
      searchingText: 'Recherche...',
      placeholderText: 'Choisissez un agent',
      allowDeselect: true,
    }
  })

  new SlimSelect({
    select: '#intervention_adherent_id',
    settings: {
      searchPlaceholder: 'Recherche',
      searchText: 'Pas de résultat',
      searchingText: 'Recherche...',
      placeholderText: 'Choisissez un adhérent',
      allowDeselect: true,
    }
  })
</script>